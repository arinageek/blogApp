<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
           <img class="ui centered rounded image" src="<%=blog.image%>">
        </div>
        <div class="content">
           <span><%=blog.created.toDateString()%></span>
        </div>
        <div class="description">
           <p><%=blog.body%></p>
        </div>
        <br>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" class="inlineButton" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui basic red button">Delete</button>
            </form>
            <form class="inlineButton" action="/blogs/<%= blog._id %>/newcom" method="GET">
                <button class="ui basic green button">Create a comment</button>
            </form>
    </div>
</div>

<div class="ui grey text inverted container segment">
    <div class="ui huge header">Comments</div>
    <%blog.comments.forEach(function (comment){ %>
        <div class="row">
            <div class="col-md-12">
                <strong><%=comment.author%></strong>
                <span class="pull-right">10 days ago</span>
                <p> <%=comment.text%> </p>
            </div>
        </div>
        <hr>
    <% }); %>
</div>       

    <br><br>
<% include ./partials/footer %>